{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@tstypes/*": ["./src/types/*"],
      "@globals": ["./src/globals.ts"],
    },
    "types": ["node", "express", "lodash"]
  },
  "include": ["src", "./src/**/*", "./src/types/**/*"],
  "exclude": ["node_modules"]
}